html
  height 100%
  margin 0
  padding 0

body
  height 100%
  margin 0
  padding 0
  font-family "Source Sans Pro", sans-serif

#page
  height 100%
  padding 0
  width 100%
  position absolute
  top 42px;

#contextual
  height 50%
  padding 0

#chat
  background-color #FFF 
  border 1px solid #000
  position relative
  height 50%
  padding 0

#log
  background-color #FFF
  border 1px solid #000
  height 50%
  padding 0

#chatbox
  position absolute
  bottom 0
  left 0
  width 100%

  input
    border-radius 0

  .icon
    border-radius 0

.name
  background-color #FBF6E9

.message, .time
  background-color #E6F4F9

.time
  text-align right